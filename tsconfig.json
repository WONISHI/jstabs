{
    "compilerOptions": {
        "baseUrl": ".",
        "sourceMap": true,
        "target": "es2015",
        "module": "es2015",
        "moduleResolution": "node",
        "noEmitOnError": true,
        "lib": ["es2017", "DOM"],
        "strict": true,
        "esModuleInterop": false,
        "rootDir": "./",
        "allowJs": true,
        "noImplicitAny": true,
        "outDir": "dist",  // 确保与 Rollup 输出路径一致
        "typeRoots":["./node_modules/@types/","./src/typings"],
        "paths": {
            "@/*": ["./src/*"]
        }
    },
    "include": ["./src/**/*.ts"]
}
